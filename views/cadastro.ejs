<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokedex</title>
    <link rel="stylesheet" href="styles/style.css" />
  </head>
  <body>
    <header>
      <img id="logo" src="images/logo.gif" alt="">
      <img id="iconeMenu" src="images/menu.png" alt="" />
    </header>
    <main>
      <div id="barraMenu">
        <%- include('./partials/menu.ejs') %>
        <img src="images/pokedex.png" alt="" />
        <img id="pikachu" src="images/pikachu.gif" alt="">
      </div>
      <section id="register">
        <div id="containerForm">
          <h2>Cadastro de pokemons</h2>

          <form action="/add" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" id="name" name="name" />

            <label for="type">Tipo:</label>
            <input type="text" id="type" name="type" />

            <label for="image">Link da Imagem:</label>
            <input type="text" id="image" name="image" />

            <label for="drescription">Descrição:</label>
            <input type="text" id="drescription" name="drescription" />

            <label for="height">Altura:</label>
            <input type="number" id="height" name="height" />

            <label for="weigth">Peso:</label>
            <input type="number" id="weigth" name="weigth" />

            <label for="category">Categoria:</label>
            <input type="text" id="category" name="category" />

            <label for="weaknesses">Fraquezas:</label>
            <input type="text" id="weaknesses" name="weaknesses" />

            <button id="buttonRegister" type="submit">Cadastrar</button>
          </form>
        </div>
      </section>
      <script src="scripts/script.js"></script>
    </main>
  </body>
</html>
